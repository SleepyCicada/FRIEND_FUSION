<%# Append user message %>
<%= turbo_stream.append "chat-messages" do %>
  <%= render partial: 'messages/message', locals: { message: @message } %>
<% end %>

<%# If AI message was generated, append it too %>
<% if @ai_message %>
  <%= turbo_stream.append "chat-messages" do %>
    <%= render partial: 'messages/message', locals: { message: @ai_message } %>
  <% end %>
<% end %>
