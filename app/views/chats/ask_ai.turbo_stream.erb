<%= turbo_stream.prepend "ask-ai-responses" do %>
  <div class="kai-response">
    <div class="kai-response-header">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
        <path d="M7.657 6.247c.11-.33.576-.33.686 0l.645 1.937a2.89 2.89 0 0 0 1.829 1.828l1.936.645c.33.11.33.576 0 .686l-1.937.645a2.89 2.89 0 0 0-1.828 1.829l-.645 1.936a.361.361 0 0 1-.686 0l-.645-1.937a2.89 2.89 0 0 0-1.828-1.828l-1.937-.645a.361.361 0 0 1 0-.686l1.937-.645a2.89 2.89 0 0 0 1.828-1.828l.645-1.937z"/>
      </svg>
      Kai
    </div>
    <div class="kai-response-text">
      <%= simple_format(@response) %>
    </div>
  </div>
<% end %>

<script>
  // Clear the ask AI input field
  const askAiInput = document.getElementById('ask-ai-input');
  if (askAiInput) {
    askAiInput.value = '';
  }

  // Scroll to the top of the responses area to show the new response
  const responsesArea = document.getElementById('ask-ai-responses');
  if (responsesArea) {
    responsesArea.scrollTop = 0;
  }
</script>
