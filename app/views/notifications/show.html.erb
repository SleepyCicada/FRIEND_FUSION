<div class="container mt-4">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h4 class="mb-0">Notification</h4>
          <% unless @notification.read? %>
            <span class="badge bg-primary">Unread</span>
          <% end %>
        </div>
        <div class="card-body">
          <p class="card-text"><%= @notification.message %></p>
          <p class="text-muted small">
            Received <%= time_ago_in_words(@notification.created_at) %> ago
          </p>

          <% unless @notification.read? %>
            <%= button_to "Mark as Read",
                  mark_as_read_notification_path(@notification),
                  method: :post,
                  class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to "Back to Notifications", notifications_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
