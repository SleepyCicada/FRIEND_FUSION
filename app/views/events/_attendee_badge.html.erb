<div class="attendee-badge" id="attendee-badge-<%= user.id %>">
  <div class="attendee-avatar">
    <% if user.avatar.attached? %>
      <%= cl_image_tag  user.avatar.key,
                        width: 45,
                        height: 45,
                        crop: :fill,
                        gravity: :face,
                        alt: user.name,
                        style: "width: 100%; height: 100%; object-fit: cover; border-radius: 50%;" %>
    <% else %>
      <%= user.name&.first&.upcase || '?' %>
    <% end %>
  </div>
  <div class="attendee-name">
    <%= user.name %>
    <% if user == event.user %>
      <span style="font-size: 0.75rem; color: #667eea; font-weight: 700;">ðŸ‘‘ HOST</span>
    <% end %>
  </div>
</div>
