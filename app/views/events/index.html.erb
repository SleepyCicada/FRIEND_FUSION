
<div class="container my-5">

  <!-- Main Title -->
  <h2 class="fw-bold mb-3 text-center">Upcoming Events</h2>

  <!-- Buttons + Filter Row -->
  <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">

    <!-- Create Event Button (Left) -->
    <%= link_to new_event_path,
        class: "btn btn-custom btn-sm px-2 py-1 rounded-pill shadow-sm" do %>
      <i class="bi bi-plus-circle me-1"></i> Create
    <% end %>

    <!-- Filter (Right) -->
    <div class="d-flex align-items-center gap-1 flex-grow-1 justify-content-end mt-2 mt-sm-0">
      <%= form_with url: events_path, method: :get, local: true,
                    class: "d-flex align-items-center gap-1 flex-wrap" do %>

        <!-- Date Field -->
        <div class="input-group input-group-sm" style="max-width: 140px;">
          <span class="input-group-text bg-light rounded-pill rounded-end-0 p-1">
            <i class="bi bi-calendar-event"></i>
          </span>
          <%= date_field_tag :date, params[:date],
              class: "form-control form-control-sm rounded-pill rounded-start-0 p-1",
              placeholder: "Date" %>
        </div>

        <!-- Filter Button -->
        <%= submit_tag "Filter",
            class: "btn btn-custom btn-sm rounded-pill px-2 py-1" %>

        <!-- Clear Button -->
        <%= link_to events_path,
            class: "btn btn-outline-custom btn-sm rounded-pill px-2 py-1" do %>
          Clear
        <% end %>
      <% end %>
    </div>

  </div>

  <!-- Events Grid -->
  <div class="row g-4">
    <% @events.each do |event| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm border-0 rounded-4">
          <% if event.image.attached? %>
            <%= link_to event_path(event) do %>
              <%= image_tag event.image, alt: event.title,
                    class: "card-img-top rounded-top-4",
                    style: "height: 180px; object-fit: cover;" %>
            <% end %>
          <% else %>
            <div class="bg-light rounded-top-4" style="height: 180px; width: 100%;"></div>
          <% end %>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-2"><%= event.title %></h5>
            <p class="card-text text-muted mb-2 event-description-clamp"><%= event.description %></p>
            <% if event.date_time.present? %>
              <small class="text-muted text-lowercase mb-3">
                <%= event.date_time.strftime("%B") %> <%= event.date_time.day.ordinalize %>, <%= event.date_time.year %>
              </small>
            <% end %>
            <%= link_to "View Event", event_path(event),
                  class: "btn btn-custom mt-auto rounded-pill px-3 py-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
