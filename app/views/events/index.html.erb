
<div class="container my-5">
  <h2 class="text-center mb-4 fw-bold">Upcoming Events</h2>

  <div class="row g-4">
    <% @events.each do |event| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm border-0 rounded-4">

          <!-- /Event Image -->
          <% if event.image.attached? %>
            <%= link_to event_path(event) do %>
              <%= image_tag event.image, alt: event.title,
                    class: "card-img-top rounded-top-4",
                    style: "height: 180px; object-fit: cover;" %>
            <% end %>
          <% else %>
            <div class="bg-light rounded-top-4" style="height: 180px; width: 100%;"></div>
          <% end %>

          <!-- Card Body -->
          <div class="card-body d-flex flex-column">

            <!-- Event Title -->
            <h5 class="card-title mb-2">
              <%= event.title %>
            </h5>

            <!-- Description -->
            <p class="card-text text-muted mb-2 event-description-clamp">
              <%= event.description %>
            </p>

            <!-- Date (below description, lowercase) -->
            <% if event.date_time.present? %>
              <small class="text-muted text-lowercase mb-3">
                <%= event.date_time.strftime("%B") %> <%= event.date_time.day.ordinalize %>, <%= event.date_time.year %>
              </small>
            <% end %>

            <!-- Button -->
            <%= link_to "View Event", event_path(event),
                  class: "btn btn-primary mt-auto rounded-pill px-3 py-2" %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
