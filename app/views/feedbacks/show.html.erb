<div class="container mt-4">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Feedback Details</h4>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Event:</strong>
            <%= link_to @event.title, @event %>
          </div>

          <div class="mb-3">
            <strong>Submitted by:</strong>
            <%= @feedback.user.name %>
          </div>

          <div class="mb-3">
            <strong>Rating:</strong>
            <div class="text-warning">
              <%= "â­" * @feedback.rating %>
            </div>
          </div>

          <div class="mb-3">
            <strong>Comment:</strong>
            <p><%= @feedback.comment %></p>
          </div>

          <div class="mb-3">
            <strong>Submitted on:</strong>
            <%= @feedback.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>

          <% if @feedback.user == current_user %>
            <div class="d-flex gap-2">
              <%= link_to "Edit", edit_event_feedback_path(@event, @feedback), class: "btn btn-primary" %>
              <%= button_to "Delete", event_feedback_path(@event, @feedback),
                    method: :delete,
                    data: { turbo_confirm: "Are you sure you want to delete this feedback?" },
                    class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to "Back to Feedbacks", event_feedbacks_path(@event), class: "btn btn-outline-secondary" %>
        <%= link_to "Back to Event", @event, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
