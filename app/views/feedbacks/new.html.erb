<div class="container mt-4">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <h2 class="mb-4">Give Feedback for <%= @event.title %></h2>

      <div class="card">
        <div class="card-body">
          <%= form_with model: [@event, @feedback], local: true do |f| %>
            <% if @feedback.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h5>
                <ul class="mb-0">
                  <% @feedback.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :rating, "Rating", class: "form-label" %>
              <%= f.select :rating,
                    options_for_select((1..5).map { |i| ["#{"â­" * i} (#{i} star#{"s" if i > 1})", i] }, @feedback.rating),
                    { prompt: "Select a rating" },
                    { class: "form-select", required: true } %>
            </div>

            <div class="mb-3">
              <%= f.label :comment, "Your Feedback", class: "form-label" %>
              <%= f.text_area :comment,
                    class: "form-control",
                    rows: 5,
                    placeholder: "Share your thoughts about the event...",
                    required: true %>
            </div>

            <div class="d-flex gap-2">
              <%= f.submit "Submit Feedback", class: "btn btn-primary" %>
              <%= link_to "Cancel", @event, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
