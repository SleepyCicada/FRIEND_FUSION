<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Event Feedback</h2>
        <%= link_to "Back to Event", @event, class: "btn btn-outline-secondary" %>
      </div>

      <% if @feedbacks.any? %>
        <div class="mb-4">
          <% @feedbacks.each do |feedback| %>
            <div class="card mb-3">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <div>
                    <strong><%= feedback.user.name %></strong>
                    <div class="text-warning">
                      <%= "â­" * feedback.rating %>
                    </div>
                  </div>
                  <small class="text-muted"><%= feedback.created_at.strftime("%b %d, %Y") %></small>
                </div>
                <p class="mb-0"><%= feedback.comment %></p>

                <% if feedback.user == current_user %>
                  <div class="mt-2">
                    <%= link_to "Edit", edit_event_feedback_path(@event, feedback), class: "btn btn-sm btn-outline-primary" %>
                    <%= button_to "Delete", event_feedback_path(@event, feedback),
                          method: :delete,
                          data: { turbo_confirm: "Are you sure?" },
                          class: "btn btn-sm btn-outline-danger" %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-info">
          No feedback has been submitted for this event yet.
        </div>
      <% end %>
    </div>
  </div>
</div>
