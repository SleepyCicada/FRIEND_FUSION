<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Create New AI Chat</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @ai_chat || AiChat.new, url: ai_chats_path, method: :post, local: false, html: { class: "needs-validation" } do |f| %>

            <div class="mb-3">
              <%= f.label :language_target, "Language to Learn", class: "form-label" %>
              <%= f.text_field :language_target,
                               class: "form-control",
                               placeholder: "e.g., Spanish, French, Japanese",
                               required: false %>
              <div class="form-text">Optional: Which language do you want to practice?</div>
            </div>

            <div class="mb-3">
              <%= f.label :persona, "AI Persona", class: "form-label" %>
              <%= f.text_field :persona,
                               class: "form-control",
                               placeholder: "e.g., a friendly tutor, a casual conversation partner",
                               required: false %>
              <div class="form-text">Optional: What type of assistant do you want?</div>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Create AI Chat", class: "btn btn-primary btn-lg" %>
              <%= link_to "Cancel", root_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
